<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox fx:id="container" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.romei.AddProductController" >
<children>
   <HBox alignment="CENTER">
      <Text text="Ingrese los datos"/>
   </HBox>
   <GridPane alignment="CENTER" Hgap="10" Vgap="10" >
      <children>
         <Label      GridPane.columnIndex="0" GridPane.rowIndex="1" text="Nombre del producto:"/>
         <TextField  GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="productName"/>
         <Label      GridPane.columnIndex="0" GridPane.rowIndex="2" text="Precio:"/>
         <TextField  GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="price"/>
         <Label      GridPane.columnIndex="0" GridPane.rowIndex="3" text="Nombre de Proveedor:"/>
         <TextField  GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="supplierName"/>

         <HBox       GridPane.columnIndex="1" GridPane.rowIndex="4" alignment="BOTTOM_RIGHT" spacing="10">
            <Button fx:id="saveButton" text="Guardar" onAction="#save"/>
         </HBox>
         <Text       GridPane.columnIndex="1" GridPane.rowIndex="5" text="" fx:id="actiontarget"/>         
      </children>
      <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </GridPane>
</children>
</VBox>